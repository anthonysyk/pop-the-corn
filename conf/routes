# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET        /                                controllers.HomeController.index

GET        /search                          controllers.SearchController.searchMovie(q: String)

GET        /enrich                          controllers.IndexerController.enrichMovies

GET        /enrichBlocking                  controllers.IndexerController.enrichBlocking

GET        /startEnrichment                 controllers.IndexerController.startEnrichingMovies
GET        /startIndexing                   controllers.IndexerController.startIndexingMovies
GET        /startIndexingSuggestions        controllers.IndexerController.startIndexingSuggestions

GET        /countMovies                     controllers.SearchController.countMovies
GET        /suggest                         controllers.SearchController.suggestMovies(q: String)

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file                    controllers.Assets.versioned(path="/public", file: Asset)